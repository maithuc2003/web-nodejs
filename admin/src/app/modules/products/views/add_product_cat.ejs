<%- get_layout("header") %>
  <div id="content" class="mt-2 mb-2">
    <div class="row">
      <div class="col-md-3  border-right">
        <%- get_layout("sidebar") %>
      </div>
      <div class="col-md-9">
        <h3>Thêm danh mục mới</h3>
        <div class="col-md-7">
          <% if (typeof success !=="undefined" ) { %>
            <div class="alert alert-success">
              <%= success %>
            </div>
            <% } %>
              <% if (typeof error !=="undefined" ) { %>
                <div class="alert alert-danger">
                  <%= error %>
                </div>
                <% } %>
                  <form method="POST" action="">
                    <div class="form-group mt-4">
                      <label for="username" class="h6">Tên danh mục</label>
                      <input type="text" class="form-control form-control-sm" name="title" id="title" value="">
                    </div>
                    <div class="form-group">
                      <label for="username" class="h6">Slug (Friendly_url )</label>
                      <input type="text" class="form-control form-control-sm" name="slug" id="slug" value="">
                    </div>
                    <button type="submit" name="btn_login" class="btn btn-outline-primary btn-block">Thêm</button>
                  </form>
        </div>
      </div>
    </div>
  </div>
  <%- get_layout("footer") %>